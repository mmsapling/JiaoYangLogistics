<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLayout_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alert_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dalertdialog_margin"
        android:layout_marginRight="@dimen/dalertdialog_margin"
        android:layout_marginTop="@dimen/dalertdialog_margin"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_level3"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dalertdialog_margin"
        android:layout_marginRight="@dimen/dalertdialog_margin"
        android:layout_marginTop="@dimen/dalertdialog_margin"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_level2" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/ddialog_line_height"
        android:layout_marginTop="@dimen/dalertdialog_line_margintop"
        android:background="@color/dalertdialog_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_neg"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dalertdialog_bt_height"
            android:layout_weight="1"
            android:background="@drawable/selector_alertdialog_left"
            android:gravity="center"
            android:textColor="@color/dactionsheet_blue"
            android:textSize="@dimen/textsize_level2" />

        <ImageView
            android:id="@+id/img_line"
            android:layout_width="@dimen/ddialog_line_height"
            android:layout_height="@dimen/dalertdialog_bt_height"
            android:background="@color/dalertdialog_line" />

        <Button
            android:id="@+id/btn_pos"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dalertdialog_bt_height"
            android:layout_weight="1"
            android:background="@drawable/selector_dalertdialog_right"
            android:gravity="center"
            android:textColor="@color/dactionsheet_blue"
            android:textSize="@dimen/textsize_level2"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>