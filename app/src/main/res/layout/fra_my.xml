<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg"
              android:orientation="vertical">

    <com.tylz.jiaoyanglogistics.view.TopMenu
        android:id="@+id/my_top_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_120"
        android:background="@color/menu_bg"
        android:orientation="horizontal">
        <!--头像-->
        <com.tylz.jiaoyanglogistics.view.CircleImageView
            android:id="@+id/civ_head_icon"
            android:layout_width="@dimen/head_size"
            android:layout_height="@dimen/head_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/my_head_margin"
            android:src="@mipmap/default_driver"/>
        <!--个人信息-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/head_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/my_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                style="@style/base_text_style"
                android:layout_weight="1"
                android:textSize="@dimen/textsize_level3"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    style="@style/base_text_style"
                    android:text="@string/account_name"/>

                <TextView
                    android:id="@+id/tv_account_name"
                    style="@style/base_text_style"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    style="@style/base_text_style"
                    android:text="@string/mobile"/>

                <TextView
                    android:id="@+id/tv_mobile"
                    style="@style/base_text_style"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_stoke_normal"
        android:paddingBottom="@dimen/line_height"
        android:orientation="vertical">
        <com.tylz.jiaoyanglogistics.view.ItemView
            android:id="@+id/my_owner_approve"
            style="@style/my_item_style"
            />

        <com.tylz.jiaoyanglogistics.view.ItemView
            android:id="@+id/my_address_book"
            style="@style/my_item_style"
            />

        <com.tylz.jiaoyanglogistics.view.ItemView
            android:id="@+id/my_point"
            style="@style/my_item_style"
            />

        <com.tylz.jiaoyanglogistics.view.ItemView
            android:id="@+id/my_remmcond_friend"
            style="@style/my_item_style"
            />

        <com.tylz.jiaoyanglogistics.view.ItemView
            android:id="@+id/my_center_msg"
            style="@style/my_item_style"
            />
    </LinearLayout>

</LinearLayout>