<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--自定义进度条-->
    <style name="progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <!--tab样式-->
    <style name="tab_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/tab_padding</item>
    </style>
    <!--用户首页功能容器样式-->
    <style name="home_feature_outcontiner_style">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--用户首页功能样式-->
    <style name="home_feature_incontiner_style">
        <item name="android:background">@drawable/selector_bg_stoke</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/home_feature_padding</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!--用户首页功能文字样式-->
    <style name="home_feature_text_style">
        <item name="android:layout_marginTop">@dimen/home_feature_margintop</item>
        <item name="android:textSize">@dimen/textsize_level3</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!--用户首页功能图片样式-->
    <style name="home_feature_img_style">
        <item name="android:layout_width">@dimen/imagesize_level2</item>
        <item name="android:layout_height">@dimen/imagesize_level2</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <!-- 自定义仿IOS的AlertDialog的样式 -->
    <style name="DAlertDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- 自定义仿IOS的ActionSheet底部Dialog的样式 ，有模糊效果 -->
    <style name="DActionSheetDialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>

    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dactionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dactionsheet_dialog_out</item>
    </style>
    <!--line样式-->
    <style name="line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:background">@color/line_bg</item>
    </style>
    <style name="line_style2" parent="line_style">
        <item name="android:layout_marginLeft">@dimen/icon_size_32</item>
    </style>
    <!--button基本样式-->
    <style name="base_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/selector_textcolor</item>
        <item name="android:textSize">@dimen/textsize_level2</item>
        <item name="android:background">@drawable/selector_button_shape</item>
        <item name="android:padding">@dimen/btn_padding1</item>
    </style>
    <!--button基本样式-->
    <style name="base_btn_style2">
        <item name="android:layout_marginLeft">@dimen/my_margin</item>
        <item name="android:layout_marginRight">@dimen/my_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/selector_textcolor</item>
        <item name="android:textSize">@dimen/textsize_level2</item>
        <item name="android:background">@drawable/selector_button_shape</item>
        <item name="android:padding">@dimen/btn_padding1</item>
    </style>
    <!--textview基本样式-->
    <style name="base_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/normal_textsize</item>
    </style>
    <style name="base_text_style2" parent="@style/base_text_style">
       <item name="android:textColor">@color/textcolor_47</item>
        <item name="android:textSize">@dimen/textsize_level3</item>
    </style>
    <style name="base_text_style3" parent="@style/base_text_style">
        <item name="android:textColor">@color/item_friend</item>
        <item name="android:textSize">@dimen/textsize_level3</item>
    </style>
    <style name="base_text_style4" parent="@style/base_text_style3">
        <item name="android:layout_marginLeft">@dimen/margin_10</item>
        <item name="android:layout_width">@dimen/width_100</item>
    </style>
    <!--我的页面子条目样式-->
    <style name="my_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--状态样式-->
    <style name="status_style" parent="@style/base_text_style">
        <item name="android:textSize">@dimen/textsize_level2</item>
        <item name="android:textColor">@color/textcolor_status</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <!--地址条目容器-->
    <style name="item_container_style">
        <item name="android:layout_marginLeft">@dimen/margin_20</item>
        <item name="android:layout_marginRight">@dimen/margin_20</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/menu_height</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!--类似地址修改地址条目的样式-->
    <style name="item_title_style" parent="@style/base_text_style2">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">@dimen/width_80</item>
    </style>
    <style name="item_content_tv_style" parent="@style/base_text_style2">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/margin_20</item>
    </style>
    <style name="item_content_et_style" parent="@style/base_text_style2">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/margin_20</item>
        <item name="android:background">@null</item>
    </style>
    <!--积分页面样式-->
    <style name="point_style" parent="@style/base_text_style">
        <item name="android:layout_marginLeft">@dimen/margin_10</item>
        <item name="android:textColor">@color/tv_normal1</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:layout_marginRight">@dimen/margin_10</item>
    </style>
    <style name="point_style1" parent="@style/base_text_style2">
        <item name="android:padding">@dimen/padding</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="point_style3" parent="@style/point_style">
        <item name="android:padding">@dimen/btn_padding1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:lines">2</item>
        <item name="android:gravity">center</item>

    </style>
    <!--EditText样式-->
    <style name="EditTextStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/menu_height</item>
        <item name="android:layout_marginLeft">@dimen/icon_size_32</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/textsize_level2</item>
    </style>
    <!--更多图标样式-->
    <style name="MoreStyle">
        <item name="android:layout_width">@dimen/view_more_size</item>
        <item name="android:layout_height">@dimen/view_more_size</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/view_margin</item>
        <item name="android:src">@mipmap/more</item>
    </style>
    <style name="price_style1" parent="@style/base_text_style2">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
